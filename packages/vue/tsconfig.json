{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es2018", "es2020", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "types": ["node", "jest", "@types/jest"],
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
