{
  "name": "@tolgee/svelte",
  "version": "6.2.2",
  "description": "Svelte implementation for Tolgee localization framework",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tolgee/tolgee-js.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "homepage": "https://tolgee.io",
  "keywords": [
    "localization",
    "internationalization",
    "l10n",
    "i18n",
    "translation",
    "languages"
  ],
  "author": "JanCizmar",
  "license": "MIT",
  "declaration": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "develop": "vite build --watch",
    "build": "vite build && npm run package",
    "package": "svelte-kit sync && svelte-package && publint",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "clean": "rm -rf dist .svelte-kit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "@tolgee/web": "6.2.2"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/svelte": "^5.2.3",
    "@tolgee/format-icu": "6.2.2",
    "@tolgee/testing": "6.2.2",
    "@types/eslint": "^9.6.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.2.0",
    "svelte": "^5.1.9",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.11",
    "vitest": "^2.0.0",
    "vitest-fetch-mock": "^0.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
