{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
