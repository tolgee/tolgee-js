{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "rootDir": "src",
    "declaration": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es2018", "es2020", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react",
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
